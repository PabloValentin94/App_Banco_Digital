<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="View\Conta\**" />
    <Compile Remove="View\Login\**" />
    <Compile Remove="View\Pages\**" />
    <EmbeddedResource Remove="View\Conta\**" />
    <EmbeddedResource Remove="View\Login\**" />
    <EmbeddedResource Remove="View\Pages\**" />
    <None Remove="View\Conta\**" />
    <None Remove="View\Login\**" />
    <None Remove="View\Pages\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="View\Assets\Correntista\Cadastro_Correntista.jpg" />
    <None Remove="View\Assets\Login\Logo.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="View\Assets\Correntista\Cadastro_Correntista.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="View\Assets\Login\Logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2196" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="View\Modules\Correntista\Cadastro_Correntista.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Modules\Inicio\Inicio.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Modules\Login\Login.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>