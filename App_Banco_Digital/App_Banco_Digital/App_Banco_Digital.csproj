<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>portable</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="View\Assets\**" />
    <Compile Remove="View\Pages\**" />
    <EmbeddedResource Remove="View\Assets\**" />
    <EmbeddedResource Remove="View\Pages\**" />
    <None Remove="View\Assets\**" />
    <None Remove="View\Pages\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="View\Login\Assets\Images\Logo.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="View\Login\Assets\Images\Logo.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2196" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="View\Conta\Assets\" />
    <Folder Include="View\Conta\Pages\" />
    <Folder Include="View\Correntista\Assets\" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="View\Correntista\Pages\Cadastro_Correntista.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="View\Login\Pages\Login.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>
</Project>