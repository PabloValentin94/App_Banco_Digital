<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Modules.Correntista.Cadastro_Correntista"
             Title="Cadastro de Correstista"
             Style="{ StaticResource fundo_paginas }">

    <ContentPage.Resources>

        <Style x:Key="agrupamento" TargetType="StackLayout">

            <Setter Property="VerticalOptions" Value="Center"/>

        </Style>
        
    </ContentPage.Resources>

    <ContentPage.Content>

        <ScrollView>

            <StackLayout Padding="0">

                <Grid RowDefinitions="200, Auto" Margin="0">

                    <Frame Grid.Row="0" Padding="0">

                        <Image x:Name="img_cadastro_correntista" Aspect="Fill" Margin="0"/>

                    </Frame>

                    <StackLayout Grid.Row="1" Margin="15,0,15,0"
                                 VerticalOptions="CenterAndExpand">
                        
                        
                        
                    </StackLayout>
                    
                </Grid>

            </StackLayout>

        </ScrollView>

    </ContentPage.Content>
    
</ContentPage>