<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Banco_Digital.View.Modules.Outros.Menu"
             Style="{ StaticResource Estilo_Digio }">

    <FlyoutPage.Flyout>

        <ContentPage Title="Menu" Style="{ StaticResource Estilo_Digio }">

            <ContentPage.Content>

                <Grid RowDefinitions="200,*" Padding="10,15,10,15">

                    <Frame Grid.Row="0" CornerRadius="15"
                           BorderColor="#00285F" BackgroundColor="#FFFFFF">

                        <Image x:Name="img_logo" Aspect="AspectFit"/>

                    </Frame>

                    <ScrollView Grid.Row="1" BackgroundColor="Transparent">

                        <Button Text="Teste"/>

                    </ScrollView>

                </Grid>

            </ContentPage.Content>

        </ContentPage>

    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>

        

    </FlyoutPage.Detail>

</FlyoutPage>